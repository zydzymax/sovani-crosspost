# =============================================================================
# SoVAni Crosspost - Environment Configuration
# =============================================================================
# Скопируйте этот файл в .env и заполните реальными значениями

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_ENV=production
LOG_LEVEL=INFO
DEBUG=false

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-too

# -----------------------------------------------------------------------------
# Database Configuration  
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://sovani:sovani_pass@postgres:5432/sovani_crosspost
POSTGRES_DB=sovani_crosspost
POSTGRES_USER=sovani
POSTGRES_PASSWORD=sovani_pass
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# -----------------------------------------------------------------------------
# Redis & Celery Configuration
# -----------------------------------------------------------------------------
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json

# Celery Workers
CELERY_WORKER_CONCURRENCY=4
CELERY_WORKER_MAX_TASKS_PER_CHILD=1000
CELERY_TASK_SOFT_TIME_LIMIT=300
CELERY_TASK_TIME_LIMIT=600

# -----------------------------------------------------------------------------
# MinIO S3 Storage Configuration
# -----------------------------------------------------------------------------
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin123
S3_BUCKET_NAME=sovani-media
S3_REGION=us-east-1
S3_USE_SSL=false

# Для продакшн используйте реальный S3 или другое S3-совместимое хранилище
# S3_ENDPOINT=https://s3.amazonaws.com
# S3_ACCESS_KEY=your-aws-access-key
# S3_SECRET_KEY=your-aws-secret-key

# -----------------------------------------------------------------------------
# Instagram API (Meta Graph API)
# -----------------------------------------------------------------------------
# Получите в Facebook for Developers: https://developers.facebook.com/
INSTAGRAM_ACCESS_TOKEN=your-long-lived-user-access-token
INSTAGRAM_BUSINESS_ACCOUNT_ID=your-instagram-business-account-id
INSTAGRAM_APP_ID=your-facebook-app-id
INSTAGRAM_APP_SECRET=your-facebook-app-secret

# -----------------------------------------------------------------------------
# VK API
# -----------------------------------------------------------------------------
# Создайте приложение в VK для разработчиков: https://dev.vk.com/
VK_ACCESS_TOKEN=your-vk-access-token
VK_GROUP_ID=your-vk-group-id
VK_API_VERSION=5.131

# -----------------------------------------------------------------------------
# Telegram Bot API  
# -----------------------------------------------------------------------------
# Создайте бота через @BotFather
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_ADMIN_CHAT_ID=your-admin-chat-id
TELEGRAM_INTAKE_CHAT_ID=your-intake-channel-id

# -----------------------------------------------------------------------------
# TikTok Content Posting API
# -----------------------------------------------------------------------------
# Зарегистрируйтесь в TikTok for Developers: https://developers.tiktok.com/
TIKTOK_ACCESS_TOKEN=your-tiktok-access-token
TIKTOK_CLIENT_KEY=your-tiktok-client-key
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret

# -----------------------------------------------------------------------------
# YouTube Data API v3
# -----------------------------------------------------------------------------
# Создайте проект в Google Cloud Console: https://console.cloud.google.com/
YOUTUBE_CLIENT_ID=your-google-oauth-client-id
YOUTUBE_CLIENT_SECRET=your-google-oauth-client-secret
YOUTUBE_REFRESH_TOKEN=your-youtube-refresh-token
YOUTUBE_API_KEY=your-youtube-data-api-key

# -----------------------------------------------------------------------------
# OpenAI API (для генерации контента)
# -----------------------------------------------------------------------------
# Получите ключ на https://platform.openai.com/
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=1000

# Альтернативно можно использовать Claude
# ANTHROPIC_API_KEY=your-anthropic-api-key
# ANTHROPIC_MODEL=claude-3-haiku-20240307

# -----------------------------------------------------------------------------
# Marketplace APIs (для обогащения товарными данными)
# -----------------------------------------------------------------------------

# Wildberries API
WB_API_TOKEN=your-wildberries-api-token

# Ozon API  
OZON_CLIENT_ID=your-ozon-client-id
OZON_API_KEY=your-ozon-api-key

# Yandex Market API
YM_OAUTH_TOKEN=your-yandex-market-oauth-token
YM_CAMPAIGN_ID=your-yandex-market-campaign-id

# -----------------------------------------------------------------------------
# Content Generation Settings
# -----------------------------------------------------------------------------

# LLM промпты для разных платформ
CAPTION_MAX_LENGTH_INSTAGRAM=2200
CAPTION_MAX_LENGTH_VK=15000
CAPTION_MAX_LENGTH_TIKTOK=2200
CAPTION_MAX_LENGTH_YOUTUBE=5000
CAPTION_MAX_LENGTH_TELEGRAM=4096

# Хештеги
HASHTAGS_COUNT_MIN=5
HASHTAGS_COUNT_MAX=30
REQUIRED_HASHTAGS="#sovani,#fashion"