# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5433/dbname

# Redis Configuration
REDIS_URL=redis://localhost:6380/2

# S3/MinIO Storage Configuration
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_BUCKET_NAME=media-bucket
S3_REGION=us-east-1

# Security & Encryption (generate random 32-byte keys)
AES_KEY=your-32-byte-aes-encryption-key!
TOKEN_ENCRYPTION_KEY=your-32-byte-token-encrypt-key!
JWT_SECRET_KEY=your-jwt-secret-key-here

# Telegram Bot Configuration
TG_BOT_TOKEN=your-telegram-bot-token
TG_PUBLISHING_BOT_TOKEN=your-publishing-bot-token
TG_ADMIN_CHANNEL_ID=-100xxxxxxxxxx
TG_WEBHOOK_URL=https://your-domain.com/api/webhooks/telegram

# VK API Configuration
VK_SERVICE_TOKEN=your-vk-service-token
VK_GROUP_ID=your-vk-group-id

# Meta/Instagram Configuration
META_APP_ID=your-meta-app-id
META_APP_SECRET=your-meta-app-secret
META_ACCESS_TOKEN=your-long-lived-access-token

# TikTok Configuration
TIKTOK_CLIENT_KEY=your-tiktok-client-key
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret
TIKTOK_REDIRECT_URI=https://your-domain.com/auth/tiktok/callback

# YouTube Configuration
YOUTUBE_CLIENT_ID=your-youtube-client-id.googleusercontent.com
YOUTUBE_CLIENT_SECRET=your-youtube-client-secret
YOUTUBE_REDIRECT_URI=https://your-domain.com/auth/youtube/callback

# Proxy Configuration (optional, for geo-restricted APIs)
# IG_PROXY_URL=http://proxy-server:8080
# TIKTOK_PROXY_URL=http://proxy-server:8080

# Brand & Localization
BRAND_TZ=Europe/Moscow
BRAND_NAME=YourBrand
